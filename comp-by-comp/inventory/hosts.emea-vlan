# HOSTS template

# Cloud Controller server
# Must be UNIQUE

[clc]
nc-5 vlan_ip=172.33.0.32/16

# Walrus server
# Must be UNIQUE host
# Not mandatory if you are using Walrus as OSG backend
[walrus]
nc-5 walrus_name=emea-walrus vlan_ip=172.33.0.33/16

# User Facing Services server(s)
# Can have multiple | Minumum 1 server
# ufs_name: Variable unique for 1 UFS | value different for each hosts
[ufs]
nc-5 ufs_name=ufs-01 vlan_ip=172.33.0.33/16

# CC of AZ-01
[cc-az-01]
nc-7 cc_name=cc-az-01 vlan_ip=172.33.0.34/16

# SC of AZ-01
[sc-az-01]
nc-7 sc_name=sc-az-01 vlan_ip=172.33.0.34/16

# NCs of AZ-01
[nc-az-01]
nc-8 vlan_ip=172.33.0.35/16


####################################################################
#
# Beyond this point, variables should be set in groups_vars !!!
#


# Defines all CCs

[cc:children]
cc-az-01


# Define all SCs

[sc:children]
sc-az-01


# Defines all NCs
[nc:children]
nc-az-01


# Defines an Availability Zone / Cluster

[az-01:children]
cc-az-01
sc-az-01
nc-az-01


# Defines all Eucalyptus JAVA Components

[java_fe:children]
clc
walrus
ufs
sc

